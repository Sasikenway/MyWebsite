<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyWebsite</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">MyWebsite</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item @(ViewData["Active"]?.ToString() == "Home" ? "active" : "")">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item @(ViewData["Active"]?.ToString() == "About" ? "active" : "")">
                    <a class="nav-link" href="/Home/About">About</a>
                </li>
                <li class="nav-item @(ViewData["Active"]?.ToString() == "Contact" ? "active" : "")">
                    <a class="nav-link" href="/Home/Contact">Contact</a>
                </li>
                <li class="nav-item @(ViewData["Active"]?.ToString() == "Help" ? "active" : "")">
                    <a class="nav-link" href="/Help/Home">Help</a>
                </li>
                <li class="nav-item @(ViewData["Active"]?.ToString() == "Tutorial" ? "active" : "")">
                    <!-- Updated the href to link to Page1 directly -->
                    <a class="nav-link" href="@Url.Action("Page1", "Tutorial", new { area = "Help" })">Tutorial</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- This is the section causing the issue -->
    <header>
        @RenderSection("Header", required: false) <!-- Render this section only once here -->
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
