@{
    ViewData["Title"] = "Contact Us";
    ViewData["Active"] = "Contact";
}

@section Header {
    <h1 class="display-4 text-center mb-4">Contact Us</h1>
}

<div class="container">
    <!-- Contact Information Section -->
    <div class="row mb-5">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Get in Touch</h3>
                    <div class="row">
                        <!-- Phone Section -->
                        <div class="col-md-4 mb-4">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-phone fa-2x mr-3"></i>
                                <div>
                                    <h5 class="mb-1">Phone</h5>
                                    <p class="lead">519-781-6439</p>
                                </div>
                            </div>
                        </div>

                        <!-- Email Section -->
                        <div class="col-md-4 mb-4">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-envelope fa-2x mr-3"></i>
                                <div>
                                    <h5 class="mb-1">Email</h5>
                                    <p class="lead">sasikenway@gmail.com</p>
                                </div>
                            </div>
                        </div>

                        <!-- LinkedIn Section -->
                        <div class="col-md-4 mb-4">
                            <div class="d-flex align-items-center">
                                <i class="fab fa-linkedin fa-2x mr-3"></i>
                                <div>
                                    <h5 class="mb-1">LinkedIn</h5>
                                    <p class="lead">
                                        <a href="https://www.linkedin.com/in/sasidharanelangovan/" target="_blank" class="text-decoration-none">
                                            Visit My LinkedIn Profile
                                        </a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional: Additional Message Section -->
    <div class="row">
        <div class="col-lg-12 text-center">
            <p>If you have any questions, or would like to discuss a potential project, feel free to contact me using the details above. I'd be happy to connect!</p>
        </div>
    </div>
</div>

