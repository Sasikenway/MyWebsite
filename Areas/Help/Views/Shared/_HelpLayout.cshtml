@{
    Layout = "~/Views/Shared/_Layout.cshtml";  // Inherit the main layout
}

<!-- Optional: Custom Help navigation bar -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Help Section</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Help Section</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Help/Home">Help Home</a>
                </li>
            </ul>
        </div>
    </nav>

    <header>
        @RenderSection("Header", required: false) <!-- Render the Header section if defined -->
    </header>

    <div class="container">
        @RenderBody()
    </div>
</body>
</html>


<!-- Inherited body and header from the main layout -->
